# Smith & Williams Trucking TMS - Environment Variables
# Copy this file to .env and fill in your API keys

# Motive API (GPS Tracking and ELD)
MOTIVE_API_KEY=your_motive_api_key_here

# Vector API (Document Management)
VECTOR_API_KEY=your_vector_api_key_here

# Google Maps API (Distance Calculations)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Truckstop.com API (Load Board - Future)
TRUCKSTOP_API_KEY=your_truckstop_api_key_here

# QuickBooks API (Accounting - Future)
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id_here
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret_here

# Database Configuration (Optional - defaults to local SQLite)
DATABASE_PATH=swt_tms.db

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_SECRET_KEY=your_session_secret_key_here